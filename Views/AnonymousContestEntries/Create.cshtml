@model JamesRecipes.Models.AnonymousContestEntry

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Confirm Participation In The Contest</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create" asp-controller="AnonymousContestEntries">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContestId" class="control-label"></label>
                <select asp-for="ContestId" class="form-control" asp-items="ViewBag.ContestId" disabled></select>
                <input type="hidden" asp-for="ContestId" />
            </div>
            <div class="form-group">
                <label asp-for="AnonymousRecipeId" class="control-label"></label>
                <select asp-for="AnonymousRecipeId" class="form-control" asp-items="ViewBag.AnonymousRecipeId" disabled></select>
                <input type="hidden" asp-for="AnonymousRecipeId" />
            </div>

            <div class="form-group">
                <input type="submit" value="Participate In This Contest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">Back to List</a>
</div>
