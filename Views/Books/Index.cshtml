@model BookDisplayModel

@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Contest</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /bradcam_area  -->
<div class="recepie_area plus_padding">
    <div class="container">
        <div class="row">
            <div class="my-2">
                <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
                    <div class="col-12">
                        <label class="visually-hidden" for="genreId">Genres</label>
                        <select class="form-select" id="genreId" name="genreId">
                            <option selected>Genre</option>
                            @if (Model != null && Model.Genres != null)
                            {
                                foreach (var genre in Model.Genres)
                                {
                                    <option selected="@(genre.Id == Model.GenreId)" value="@genre.Id">@genre.GenreName</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-12">
                        <label class="visually-hidden" for="sterm">Search by title</label>
                        <div class="input-group">
                            <div class="input-group-text"></div>
                            @if (Model != null)
                            {
                                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Search by title">
                            }

                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a href="/Home/Index" class="btn btn-dark">Reset</a>
                    </div>

                    <div class="col-12">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/Cart/GetUserCart">
                                    <span id="cartCount" class="badge text-bg-info">0</span>
                                    <i class="bi bi-cart-fill"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>

            <div class="w-100 mt-4 d-flex flex-wrap ">
                @if (Model != null && Model.Genres != null)
                {
                    @foreach (var book in Model.Books)
                    {
                        <div class="card mx-3 mb-4" style="width: 11rem;">
                            @if (string.IsNullOrEmpty(book.Image))
                            {
                                <img style="width:100%;height:180px" src="/images/NoImage.jpg" class="card-img-top" alt="...">

                            }
                            else
                            {
                                <img style="width:100%;height:180px" src="/images/Bread-Street-Kitchen.jpg" class="card-img-top" alt="...">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@book.BookName</h5>
                                <p class="card-text">
                                    <b>Genre: </b>@book.GenreName <br />
                                    <b>Author: </b>@book.AuthorName <br />
                                    <b>Price: </b>@book.Price
                                </p>
                                <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add to cart</button>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function add(bookId) {
            var usernameEl = document.getElementById("username");
            if (usernameEl == null) {
                window.location.href = "/FE/Account/Login";
                //var username=usernameEl.innerText;
                //  if(username.length<1){
                //      window.location.href="/Identity/Account/Login";
                //  }
            }
            try {
                var response = await fetch(`/Cart/AddItem?bookId=${bookId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}