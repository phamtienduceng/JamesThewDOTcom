@model List<Faq>
@{
    ViewData["Title"] = "About us";
}

<h1 class="text-center text-danger pb-4">FAQ's Page</h1>

<div class="container pb-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="pb-4">
                            <h3>Question: </h3>
                            <p>@item.Question</p>
                        </div>
                        <div>
                            <h3>Answer: </h3>
                            <p>@item.Answer</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>    