@model JamesRecipes.Models.Book.DTOs.CartItemViewModel
@Html.Partial("_NotificationPartial")
<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Image</td>
                        <td class="title">Title</td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td class="action">Action</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CartItems.Count > 0)
                    {
                        @foreach (var book in Model.CartItems)
                        {
                            <tr>
                                <td class="cart_image">
                                    <img src="~/images/@book.Image" alt="" width="100px" height="100px">
                                </td>
                                <td class="cart_title">
                                    <h4><a href="">@book.Title</a></h4>
                                </td>
                                <td class="cart_price">
                                    <p>@book.Price</p>
                                </td>
                                <td class="cart_quantity">

                                    <div class="cart_quantity_button">
                                        <a class="btn btn-primary btn-sm" asp-action="Increase" asp-controller="Cart" asp-route-id="@book.BookID"> + </a>
                                        <input class="cart_quantity_input" type="text" name="quantity" value="@book.Quantity" autocomplete="off" size="2">
                                        <a class="btn btn-success btn-sm" asp-action="Decrease" asp-controller="Cart" asp-route-id="@book.BookID"> - </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Remove" asp-controller="Cart" asp-route-id="@book.BookID"> Remove </a>
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@Model.CartItems.Where(x=>x.BookID == book.BookID).Sum(x=>x.Price*x.Quantity).ToString("N2")</p>
                                </td>
                                <td class="cart_delete">
                                    <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="6">Grand Total: @Model.GrandTotal.ToString("N2")</td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-action="Clear" asp-controller="Cart"> Clear </a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-action="Checkout" asp-controller="Checkout"> Checkout </a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="6"><h4>Your Cart Is Empty</h4></td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->