@model List<JamesRecipes.Models.Book.Cart>

<!DOCTYPE html>
<html>
<head>
    <title>Your Cart</title>
</head>
<body>

    <!-- Cart Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">

                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th>Books</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">

                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td class="align-middle"><img src="@Url.Content("~/"+item.Image)" alt="Book Image" style="width:100px; height:100px;" />@(item.Books?.Title)</td>
                                    <td class="align-middle">@(item.Books?.Price)</td>
                                    <td class="align-middle">
                                        <form asp-action="Update" asp-controller="Cart" method="post">
                                            <input type="hidden" name="id" value="@item.Books?.BookId" />
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" required />
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="fa fa-refresh"></i> Update
                                            </button>
                                        </form>
                                    </td>
                                    <td class="align-middle">@(item.Books?.Price * item.Quantity)</td>
                                    <td class="align-middle">
                                        <form asp-action="Remove" asp-controller="Cart" method="post">
                                            <input type="hidden" name="id" value="@item.Books?.BookId" />
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="fa fa-times"></i> Remove
                                            </button>
                                        </form>

                                    </td>
                                </tr>

                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">
                                    <p>Your cart is empty.</p>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">@ViewBag.total</h6>
                        </div>

                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold"><p>@ViewBag.total</p></h5>

                        </div>
                        @* <button class="btn btn-block btn-primary my-3 py-3" asp-action="Checkout" asp-controller="Cart">Proceed To Checkout</button> *@
                        <form asp-action="Checkout" asp-controller="Cart" method="post">
                            <button type="submit" class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</button>
                        </form>
                    </div>
                </div>
                <!-- Display error message if available -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Cart End -->
</body>
</html>