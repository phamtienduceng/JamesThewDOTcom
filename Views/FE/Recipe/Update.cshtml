@model Recipe

@{
    ViewData["Title"] = "Update Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger text-center" style="margin-bottom: 70px; margin-top: 150px">Update Recipe</h2>


<div class="container">
@if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
    <form asp-action="UpdateRecipe" asp-controller="Recipe" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="RecipeId" name="id" type="hidden"/>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" required="required"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="CategoryRecipeId" class="control-label">Category</label>
                <select asp-for="CategoryRecipeId" asp-items="ViewBag.CategoryId" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryRecipeId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Procedure" class="control-label">Procedure</label>
                <textarea asp-for="Procedure" class="form-control" required="required" rows="4"></textarea>
                <span asp-validation-for="Procedure" class="text-danger"></span>
            </div>
        
            <div class="form-group col-md-6">
                <label asp-for="Ingredients" class="control-label">Ingredients</label>
                <textarea asp-for="Ingredients" class="form-control" required="required" rows="4"></textarea>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Timeneeds" class="control-label">Time Needs</label>
                <input asp-for="Timeneeds" class="form-control" />
                <span asp-validation-for="Timeneeds" class="text-danger"></span>
            </div>
                
            <div class="form-group col-md-6">
                <label asp-for="VideoUrl" class="control-label">Video URL</label>
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
        </div>
        
        <div>
            <img alt="@Model.Title" src="~/@Model.Image" style="height: 200px; width: auto"/>
        </div>

        <div class="form-group">
            <label asp-for="Image"></label>
            <input asp-for="Image" type="file" name="file" class="form-control w-25" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>
