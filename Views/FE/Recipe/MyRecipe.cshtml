@using Newtonsoft.Json
@using X.PagedList.Mvc.Common
@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Recipes";
}

@{
    var httpContext = Context.Request.HttpContext;
    var userJson = httpContext.Session.GetString("user");
}


<div class="container" style="margin-top: 150px">
    <div class="row">
        <!-- Sidebar for Search and Filter -->
        <div class="col-xl-3 col-lg-3">
            <div class="sidebar">
                <!-- Add your search and filter controls here -->
                <h4>Search recipe: </h4>
                <form asp-action="Index" asp-controller="Recipe" method="get">
                    <div class="form-actions no-color">
                        <p>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
                            <input type="submit" value="Search" class="btn btn-default" />
                        </p>
                    </div>
                </form>
                <!-- Example filter dropdown -->
                <h4>Sorting</h4>
                <ul>
                    <li>
                        <a asp-action="Index" asp-controller="Recipe" asp-route-sortOrder="@ViewData["NameSort"]">Title</a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Recipe" asp-route-sortOrder="@ViewData["DateSort"]">Date post</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-xl-9 col-lg-9">
            <h2 class="text-center">Your recipes</h2>
            
            <!-- Recipe Display Area -->
            <div class="recepie_area">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xl-4 col-lg-4 col-md-6">
                                <div class="single_recepie text-center">
                                    <div class="recepie_thumb">
                                        <img style="height: 200px" src="~/@item.Image" alt="@item.Title">
                                    </div>
                                    <h3>@item.Title</h3>
                                    <span>@item.CreatedAt</span>
                                    <p class="mb-0">Time Needs: @item.Timeneeds</p>
                                    @if (!string.IsNullOrEmpty(userJson) )
                                    {
                                        var user = JsonConvert.DeserializeObject<User>(userJson);
                                        if (user.UserId == @item.UserId)
                                        {
                                            <div>
                                                Show: <input asp-for="@item.Status" type="checkbox" class="recipe-switch" id="switch-@item.RecipeId" data-recipe-id="@item.RecipeId">
                                            </div>
                                        }
                                    }
                                    <a asp-action="SingleRecipe" class="line_btn" asp-controller="Recipe" asp-route-id="@item.RecipeId">View recipe's detail</a>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /Recipe Display Area -->
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.recipe-switch').change(function () {
                var recipeId = $(this).data('recipe-id');
                var isChecked = $(this).prop('checked');
                
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("SwitchStatus", "Recipe")',
                    data: { id: recipeId, status: isChecked },
                    success: function () {
                        console.log('Status updated successfully.');
                    },
                    error: function (error) {
                        console.error('Error updating status:', error);
                    }
                });
            });
        });
    </script>
}
