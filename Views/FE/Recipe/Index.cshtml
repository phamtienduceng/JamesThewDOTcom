@using Newtonsoft.Json
@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Recipes";
}

@{
    var httpContext = Context.Request.HttpContext;
    var userJson = httpContext.Session.GetString("user");
}


<div class="container">
    <div class="row">
        <!-- Sidebar for Search and Filter -->
        <div class="col-xl-3 col-lg-3">
            <div class="sidebar">
                <!-- Add your search and filter controls here -->
                <h4>Search and Filter</h4>
                <!-- Example search input -->
                <input type="text" placeholder="Search...">
                <!-- Example filter dropdown -->
                <select>
                    <option>Filter 1</option>
                    <option>Filter 2</option>
                    <!-- Add more filters as needed -->
                </select>
                <!-- Add additional search and filter controls as needed -->
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-xl-9 col-lg-9">
            <!-- Bradcam Area -->
            <div class="bradcam_area bradcam_bg_1">
                <!-- Your existing bradcam code here -->
            </div>
            <!-- /Bradcam Area -->

            @if (!string.IsNullOrEmpty(userJson))
            {
                <h3><a asp-action="Create" asp-controller="Recipe">Create new recipe</a></h3>
            }
            
            <!-- Recipe Display Area -->
            <div class="recepie_area plus_padding">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xl-4 col-lg-4 col-md-6">
                                <div class="single_recepie text-center">
                                    <div class="recepie_thumb">
                                        <img src="~/@item.Image" alt="@item.Title">
                                    </div>
                                    <h3>@item.Title</h3>
                                    <span>@item.CreatedAt</span>
                                    <p>Time Needs: @item.Timeneeds</p>
                                    <a href="#" class="line_btn">View Full Recipe</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /Recipe Display Area -->
        </div>
    </div>
</div>
