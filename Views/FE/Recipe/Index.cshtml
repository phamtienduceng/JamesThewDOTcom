@using Newtonsoft.Json
@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Recipes";
}

@{
    var httpContext = Context.Request.HttpContext;
    var userJson = httpContext.Session.GetString("user");
}


<div class="container" style="margin-top: 150px">
    <div class="row">
        <!-- Sidebar for Search and Filter -->
        <div class="col-xl-3 col-lg-3">
            <div class="sidebar">
                <!-- Add your search and filter controls here -->
                <h4>Search recipe: </h4>
                <form asp-action="Index" asp-controller="Recipe" method="get">
                    <div class="form-actions no-color">
                        <p>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
                            <input type="submit" value="Search" class="btn btn-default" />
                        </p>
                    </div>
                </form>
                <!-- Example filter dropdown -->
                <h4>Sorting</h4>
                <ul>
                    <li>
                        <a asp-action="Index" asp-controller="Recipe" asp-route-sortOrder="@ViewData["NameSort"]">@Html.DisplayNameFor(model => model.Title)</a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Recipe" asp-route-sortOrder="@ViewData["DateSort"]">@Html.DisplayNameFor(model => model.CreatedAt)</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-xl-9 col-lg-9">
            @if (!string.IsNullOrEmpty(userJson))
            {
                <h3><a asp-action="Create" asp-controller="Recipe">Create new recipe</a></h3>
            }
            else
            {
                <h3>You can <a asp-action="Login" asp-controller="Account">Login</a> to post your own recipes.</h3>
            }
            
            <!-- Recipe Display Area -->
            <div class="recepie_area">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xl-4 col-lg-4 col-md-6">
                                <div class="single_recepie text-center">
                                    <div class="recepie_thumb">
                                        <img src="~/@item.Image" alt="@item.Title">
                                    </div>
                                    <h3>@item.Title</h3>
                                    <span>@item.CreatedAt</span>
                                    <p>Time Needs: @item.Timeneeds</p>
                                     <a asp-action="SingleRecipe" asp-controller="Recipe" asp-route-id="@item.RecipeId">View recipe's detail</a>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /Recipe Display Area -->
        </div>
    </div>
</div>
