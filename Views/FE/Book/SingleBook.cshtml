@using Newtonsoft.Json
@model Book
@{
  ViewData["Title"] = Model.Title;
}

@{
    var httpContext = Context.Request.HttpContext;
    var userJson = httpContext.Session.GetString("userLogged");
}

<div class="container">
  <div class="row">
      <!-- Cột cho Hình ảnh -->
      <div class="col-md-6">
          <h1>@Model.Title</h1>

          <div>
              <img class="img-fluid mb-4" src="~/@Model.Image" alt="@Model.Title" />
          </div>
      </div>

      <!-- Cột cho Thông tin -->
      <div class="col-md-6">
          <div class="mt-4">
              <h3>Author</h3>
              <p>@Model.Author</p>
          </div>

          <div class="mt-4">
              <h3>Category: </h3>
              <p>@Model.CategoryId</p>
          </div>

          <div class="mt-4">
              <h3>Price</h3>
              <p>$@Model.Price</p>
          </div>

          <div class="mt-4">
              <h3>Stock</h3>
              <p>@Model.StockQuantity</p>
          </div>
          <div>
              <a><button class="btn btn-info">Add to cart</button></a>
          </div>
      </div>
  </div>
</div>

