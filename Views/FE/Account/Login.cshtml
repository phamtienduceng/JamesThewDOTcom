@model JamesRecipes.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="row" style="margin: 150px 0 50px 0">
    <div class="col-md-4 mx-auto">
        <h1 class="text-center text-danger" style="margin-bottom: 50px">Login</h1>
        <form asp-action="Login" asp-controller="Account" class="bg-light p-4 rounded">
            @if (ViewData["Error"] != null && !string.IsNullOrWhiteSpace(ViewData["Error"].ToString()))
            {
                <div class="alert alert-danger">@ViewData["Error"]</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label><span class="text-danger">*</span>
                <input type="Email" name="email" class="form-control" value="@ViewBag.EmailValue" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password:</label><span class="text-danger">*</span>
                <input type="password" name="pass" class="form-control" value="@ViewBag.PassValue" />
            </div>
            <div class="form-group">
                <a asp-action="ForgotPassword" asp-controller="Account" class="text-muted">Forgot Password</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
            <div class="text-center text-muted">Don't have an account? <a asp-action="Register" asp-controller="Account" class="text-primary">Register</a></div>
        </form>
    </div>
</div>

