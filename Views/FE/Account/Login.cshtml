@model JamesRecipes.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4 mx-auto">
        <h1 class="text-center">Login</h1>
        <form asp-action="Login" asp-controller="Account">
            @if (ViewData["Error"] != null && !string.IsNullOrWhiteSpace(ViewData["Error"].ToString()))
            {
                <div class="alert alert-danger">@ViewData["Error"]</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="Email" name="email" class="form-control" value="@ViewBag.EmailValue" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password"  name="pass" class="form-control" />
            </div>
            <div> <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a></div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div>Don't have an account? <a asp-action="Register" asp-controller="Account">Register</a></div>
            <div>
                Continue as guest? <a href="javascript:history.back()">Go Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}