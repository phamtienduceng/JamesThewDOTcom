@model IEnumerable<JamesRecipes.Models.CategoriesTip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FELayout.cshtml";
}
<h2 class="card-title fw-semibold mb-4">Tip Management</h2>

<p>
    <a asp-action="Create" asp-controller="TipCategoriesManagement">Create New Tip Category</a>
</p>
<div><p style="color: red">@TempData["msgDelete"]</p></div>


<table class="table ">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryTipId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="TipCategoriesManagement" asp-route-id="@item.CategoryTipId">EditName</a> | 
                <a asp-action="Delete" asp-controller="TipCategoriesManagement" asp-route-id="@item.CategoryTipId">Delete</a> | 
                <a asp-action="GetRecipeByCategory" asp-controller="TipCategoriesManagement" asp-route-id="@item.CategoryTipId">View tips</a>
            </td>
        </tr>
    }
    </tbody>
</table>