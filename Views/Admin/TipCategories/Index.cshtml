@model IEnumerable<JamesRecipes.Models.CategoriesTip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FELayout.cshtml";
}
<h2 class="card-title fw-semibold mb-4">Tip Management</h2>

<p>
    <a asp-action="Create" asp-controller="TipCategoriesManagement">Create New Tip Category</a>
</p>
<div><p style="color: red">@TempData["msgDelete"]</p></div>


<table class="table ">
    <thead>
    <tr>
        <th width="20%">
            Id
        </th>
        <th width="20%">
            Name
        </th>
        <th width="20%">
            Number of tips
        </th>
        <th width="40%">
            Action
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryTipId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tips.Count)
            </td>
            <td>
                <div class="d-flex">
                    <a asp-action="Edit" asp-controller="TipCategoriesManagement" asp-route-id="@item.CategoryTipId" class="btn btn-primary" style="margin-right: 10px">EditName</a> 
                    <form id="deleteForm-@item.CategoryTipId" data-care-id="@item.CategoryTipId" method="post" onsubmit="return confirmDelete('@item.CategoryTipId')">
                        <button class="btn btn-danger mr-2" style="margin-right: 10px">Delete</button>
                    </form>
                    <a asp-action="GetRecipeByCategory" asp-controller="TipCategoriesManagement" asp-route-id="@item.CategoryTipId" class="btn btn-info">View tips</a>
                </div>
            </td>

        </tr>
    }
    </tbody>
</table>

@section scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        function confirmDelete(categoryId) {
            var ct = categoryId;
        
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Delete", "TipCategoriesManagement")',
                        data: { id: ct },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire(
                                    'Deleted!',
                                    'Your tip category has been deleted.',
                                    'success'
                                );
        
                                setTimeout(function () {
                                    window.location.href = '@Url.Action("Index", "TipCategoriesManagement")';
                                }, 1500);
                            } else {
                                Swal.fire(
                                    'Failed!',
                                    data.message || 'An error occurred while deleting the tip category.',
                                    'error'
                                );
                            }
                        },
                    });
                }
            });
            return false;
        }
    </script>
}