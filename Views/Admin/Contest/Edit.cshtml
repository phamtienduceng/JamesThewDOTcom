@model JamesRecipes.Models.Contest
@{
    ViewData["Title"] = "Edit Contest";
    Layout = "~/Views/Shared/_FELayout.cshtml";
}
@if (Model.Image != null)
{
    <div class="form-group">
        <img src="@Url.Content("~/"+Model.Image)" alt="Contest Image" style="width:100px; height:100px;" />
    </div>
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-controller="ContestManagement" enctype="multipart/form-data">
    <input type="hidden" asp-for="ContestId" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Guidelines" class="control-label"></label>
        <textarea asp-for="Guidelines" class="form-control"></textarea>
        <span asp-validation-for="Guidelines" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Activate</option>
            <option value="false">Not Activate</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" type="file" name="file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="ContestManagement" class="btn btn-secondary">Back</a>
    </div>
</form>


