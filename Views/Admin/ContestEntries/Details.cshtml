@model JamesRecipes.Models.ContestEntry

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_FELayout.cshtml";
}



<h1>Details</h1>

<div>
    <h4>ContestEntry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Admin/images/contestentries/@(Model.Image)" alt="Contest Entry Image" class="img-thumbnail" style="max-width: 100px;" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contest.ContestId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
    </dl>
</div>

@Html.Partial("RecipeDetailsPartial", Model.Recipe)



<div>
    <a asp-action="Edit" asp-controller="ContestEntries" asp-route-id="@Model?.EntryId">Score the Entries</a> |
    <a asp-action="Index" asp-controller="ContestEntries">Back to List</a>
</div>
